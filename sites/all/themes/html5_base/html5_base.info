; $Id
name        = HTML5 Base
description = A base theme for making HTML5 sites. This theme requires the HTML5 Tools module. http://drupal.org/project/html5_tools.
screenshot  = images/screenshot.png
core        = 6.x
engine      = phptemplate


; REGIONS
; ------------------------------
; Here is a very basic set. Go ahead and add some yourself.
regions[header] = Header
regions[content_top] = Content top
regions[content_bottom] = Content bottom
regions[sidebar_first] = First sidebar
regions[sidebar_second] = Second sidebar
regions[footer] = Footer


; CSS
; ------------------------------
stylesheets[all][]   = css/default.css
stylesheets[all][]   = css/html5.css
stylesheets[all][]   = css/layout.css
stylesheets[all][]   = css/style.css
stylesheets[print][] = css/print.css


; FEATURES AND SETTINGS
; ------------------------------
features[] = logo
features[] = name
features[] = slogan
features[] = mission
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

settings[html5_base_modernizr]            = 0
settings[html5_base_use_mobile_viewport]  = 0
settings[html5_base_mobile_viewport]      = 'width=device-width; initial-scale=1.0; maximum-scale=1.0;'
settings[html5_base_include_chrome_frame] = 1
settings[html5_base_zen_tabs]              = 0
settings[html5_base_wireframe]             = 0
settings[html5_base_block_editing]         = 0
settings[html5_base_rebuild_registry]      = 0
settings[html5_base_breadcrumb]            = yes
settings[html5_base_breadcrumb_separator]  = ' Â» '
settings[html5_base_breadcrumb_home]       = 1
settings[html5_base_breadcrumb_trailing]   = 0
settings[html5_base_breadcrumb_title]      = 0


